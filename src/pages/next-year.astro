---
import { changeLanguage, t } from "i18next";
import HPTypography from "@components/HPTypography.astro";
import Layout from "@layouts/Layout.astro";
import Year from "@components/Year.astro";

changeLanguage("bg");

const year = new Date().getFullYear() + 1;
---

<Layout
  title={`${t("GLOBAL.PROJECT_NAME")} - ${year} ${t("PAGES.NEXT_YEAR.TITLE")}`}
>
  <h1 hidden>{year} - {t("PAGES.NEXT_YEAR.TITLE")}</h1>

  <Year year={year}>
    <HPTypography disableMarginBottom slot="year" element="h2" appearance="h3">
      {year}
    </HPTypography>

    <HPTypography disableMarginBottom slot="title" element="h2" appearance="h1">
      {t("PAGES.NEXT_YEAR.TITLE")}
    </HPTypography>
  </Year>
</Layout>
