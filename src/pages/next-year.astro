---
import i18next, { changeLanguage, t } from "i18next";
import { HPTypography } from "@components/hp-typography";
import Layout from "@layouts/Layout.astro";
import Year from "@components/Year.astro";

changeLanguage("bg");

const currentYear = new Date().getFullYear();
const nextYear = currentYear + 1;
---
<Layout title={`${nextYear} - ${t('PAGES.NEXT_YEAR.TITLE')}`}>
  <HPTypography element="h2" appearance="h1">{nextYear} - {t('PAGES.NEXT_YEAR.TITLE')}</HPTypography>

  <Year year={nextYear} />
</Layout>
