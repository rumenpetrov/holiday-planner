<style>
  header {
    padding: var(--space-size-200);
  }

  @media (min-width: 850px) {
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }
  }

  .logo svg {
    width: 16rem;
    height: auto;
    fill: var(--palette-dominant-contrast);
  }

  .logo #logo-gradient-target {
    fill: url(#logo-gradient) #fff;
  }

  .menu {
    margin-bottom: var(--space-size-200);
  }

  @media (min-width: 750px) {
    .menu {
      margin-bottom: 0;
    }
  }

  .menu-languages {
    border: 1px solid var(--palette-primary);
    border-radius: var(--space-size-200);
    padding: var(--space-size-200);
    margin: var(--space-size-200);
  }

  main {
    padding: 1.5rem 0;
  }

  .wrapper {
    max-width: 100%;
    padding: 0 var(--space-size-200);
    margin: 0 auto;
  }

  @media (min-width: 1200px) {
    .wrapper {
      width: 1200px;
    }
  }

  .actions {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  html:not([data-color-scheme]) #color-scheme-trigger {
    display: none;
  }

  #color-scheme-trigger {
    border: none;
    background-color: transparent;
    width: 32px;
    height: 32px;
    margin: 0 var(--space-size-200);
    cursor: pointer;
  }

  #color-scheme-trigger svg {
    fill: var(--palette-dominant-contrast);
  }

  html[data-color-scheme="light"] #color-scheme-trigger-icon-light {
    display: none;
  }

  html[data-color-scheme="dark"] #color-scheme-trigger-icon-dark {
    display: none;
  }
</style>
