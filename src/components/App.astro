---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}favicon.svg`}
    />
    <link rel="manifest" href={`${import.meta.env.BASE_URL}app.webmanifest`} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light dark" />

    <title>{title}</title>
    <meta name="description" content={t("GLOBAL.PROJECT_NAME")} />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com"> -->
    <!-- Fonts are locally loaded below. This line is kept just in case. -->
    <!-- <link href="https://fonts.googleapis.com/css2?family=Cormorant+Infant:ital,wght@0,400;0,700;1,400;1,700&family=Sofia+Sans:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet"> -->
    <link
      rel="stylesheet"
      href={`${import.meta.env.BASE_URL}/styles/fonts.css`}
    />

    <link
      rel="stylesheet"
      href={`${import.meta.env.BASE_URL}/styles/global.css`}
    />

    <script is:inline>
      const rootElement = document.documentElement;
      const colorSchemeDefaultValue = "light";

      const getSystemColorScheme = () => {
        const isLight =
          window.matchMedia &&
          window.matchMedia("(prefers-color-scheme: light)").matches;
        const isDark =
          window.matchMedia &&
          window.matchMedia("(prefers-color-scheme: dark)").matches;

        if (isLight) {
          return "light";
        } else if (isDark) {
          return "dark";
        }

        return colorSchemeDefaultValue;
      };

      const getColorScheme = () => {
        const storedValue = localStorage.getItem("colorScheme");

        if (storedValue === "system") {
          return getSystemColorScheme();
        } else if (storedValue) {
          return storedValue;
        }

        return getSystemColorScheme();
      };

      const getStoredColorScheme = () => {
        const stored = localStorage.getItem("colorScheme");
        if (stored === "light" || stored === "dark" || stored === "system") {
          return stored;
        }
        return "system";
      };

      const setColorScheme = (colorScheme = colorSchemeDefaultValue) => {
        // Validate colorScheme value
        if (colorScheme !== "light" && colorScheme !== "dark" && colorScheme !== "system") {
          colorScheme = "system";
        }

        const actualColorScheme =
          colorScheme === "system" ? getSystemColorScheme() : colorScheme;

        rootElement.dataset.colorScheme = actualColorScheme;
        rootElement.dataset.colorSchemePreference = colorScheme;

        localStorage.setItem("colorScheme", colorScheme);
      };

      setColorScheme(getStoredColorScheme());

      document.addEventListener("DOMContentLoaded", () => {
        const colorSchemeTriggerElement = document.querySelector(
          "#color-scheme-trigger",
        );

        colorSchemeTriggerElement.addEventListener("click", () => {
          const storedScheme = getStoredColorScheme();

          if (storedScheme === "light") {
            setColorScheme("dark");
          } else if (storedScheme === "dark") {
            setColorScheme("system");
          } else {
            setColorScheme("light");
          }
        });

        const updateSystemColorScheme = () => {
          if (getStoredColorScheme() === "system") {
            setColorScheme("system");
          }
        };

        window
          .matchMedia("(prefers-color-scheme: dark)")
          .addEventListener("change", updateSystemColorScheme);

        window
          .matchMedia("(prefers-color-scheme: light)")
          .addEventListener("change", updateSystemColorScheme);
      });
    </script>
  </head>
  <body id="body">
    <slot />
  </body>
</html>

<style>
  html {
    accent-color: var(--palette-accent);
    overflow-x: hidden;
    overflow-y: scroll;
    background: var(--palette-dominant);
    font-family: var(--font-family-primary);
    font-size: 80%;
    color: var(--palette-dominant-contrast);
  }

  @media (min-width: 500px) {
    html {
      font-size: 100%;
    }
  }

  body {
    font-size: 1rem;
    padding-bottom: 80px;
  }
</style>
