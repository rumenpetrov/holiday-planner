---
import { getLangFromUrl, generateLink } from "@i18n/utils";

export interface Props {
  href: string;
  accent?: boolean;
  class?: string;
}

const { href, accent, class: className, ...rest } = Astro.props;
const locale = getLangFromUrl(Astro.url);
---

<a
  {...rest}
  href={generateLink(locale, href)}
  rel="prefetch"
  class:list={["root", accent && "accent", className]}
  data-astro-prefetch="viewport"
>
  <span><slot /></span>
</a>

<style
  define:vars={{
    "mask-scribble": `url(${import.meta.env.BASE_URL}mask-scribble.png)`,
  }}
>
  .root {
    position: relative;
    z-index: 1;
    font-size: var(--theme-font-size-link);
    color: var(--theme-palette-primary);
    font-weight: 500;
    text-decoration: underline;
    text-decoration-style: double;
    transition: all var(--theme-transition-duration-base) ease;
  }

  .root:hover {
    text-decoration: none;
  }

  .root.accent {
    color: var(--theme-palette-accent);
  }
</style>
